{
  "manifest_version": 3,
  "name": "Autoplay and Pause",
  "version": "1.0",
  "description": "Automatically pause and play YouTube videos when switching tabs or applications.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "icons": {
    "16": "icons/icon16.webp",
    "48": "icons/icon48.webp",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.webp",
      "48": "icons/icon48.webp",
      "128": "icons/icon128.pmg"
    }
  },
  "license": "MIT"
}
