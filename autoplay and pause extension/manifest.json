{
  "manifest_version": 2,
  "name": "YouTube Auto Pause/Play",
  "version": "1.0",
  "permissions": ["activeTab"],
  "background": {
      "scripts": "background.js",
      "persistent": false
  },
  "content_scripts": 
  [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
  }
  ]
}
